<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="csrf-token" content="{{ csrfToken }}" />
  <title>
    Recherche - Twitter Clone
  </title>
  <script src="https://cdn.tailwindcss.com">

  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <style>
    /* Styles pour les thèmes */

    .theme-blanc {
      --tw-bg-opacity: 1;
      background-color: rgb(255 255 255 / var(--tw-bg-opacity));
      --tw-text-opacity: 1;
      color: rgb(0 0 0 / var(--tw-text-opacity));
    }

    .theme-blanc .sidebar,
    .theme-blanc .border-gray-800 {
      border-color: rgb(229 231 235);
    }

    .theme-blanc .bg-black {
      background-color: rgb(255 255 255);
    }

    .theme-blanc .text-white {
      color: rgb(0 0 0);
    }

    .theme-blanc .hover\:bg-gray-900:hover {
      background-color: rgb(243 244 246);
    }

    .theme-vert {
      --primary-color: rgb(34 197 94);
    }

    .theme-vert .bg-blue-500 {
      background-color: var(--primary-color);
    }

    .theme-rouge {
      --primary-color: rgb(239 68 68);
    }

    .theme-rouge .bg-blue-500 {
      background-color: var(--primary-color);
    }

    .theme-rose {
      --primary-color: rgb(236 72 153);
    }

    .theme-rose .bg-blue-500 {
      background-color: var(--primary-color);
    }

    .theme-bleu {
      --primary-color: rgb(59 130 246);
    }

    .theme-bleu .bg-blue-500 {
      background-color: var(--primary-color);
    }
  </style>
</head>

<body class="bg-black text-white min-h-screen">
  <div class="flex min-h-screen">
    <!-- Sidebar gauche -->
    <div class="w-64 flex flex-col bg-black border-r border-gray-800 fixed h-full z-30 sidebar">
      <div class="flex-1 flex flex-col min-h-0">
        <!-- Logo X -->
        <div class="mb-2 p-3">
          <svg class="w-6 h-6 fill-white" viewBox="0 0 24 24">
            <path
              d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
          </svg>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-3 overflow-hidden">
          <div class="space-y-0.5">
            <!-- Maison -->
            <a href="/dashboard"
              class="flex items-center space-x-3 p-2 rounded-full hover:bg-gray-900 transition-all duration-200">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 9c-2.209 0-4 1.791-4 4s1.791 4 4 4 4-1.791 4-4-1.791-4-4-4zm9.707-5.293l-9-9a.999.999 0 00-1.414 0l-9 9A.999.999 0 003 5.414V19a3 3 0 003 3h4a1 1 0 001-1v-3a1 1 0 011-1h2a1 1 0 011 1v3a1 1 0 001 1h4a3 3 0 003-3V5.414a.999.999 0 00-.293-.707z" />
