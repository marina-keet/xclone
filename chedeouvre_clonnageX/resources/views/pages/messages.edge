                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span class="text-lg">Profil</span>
                        </a>

                        <!-- Plus d'options -->
                        <div class="relative">
                            <button onclick="toggleMoreMenu()"
                                class="flex items-center space-x-3 p-2 rounded-full hover:bg-gray-900 transition-all duration-200 w-full">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
                                </svg>
                                <span class="text-lg">Plus</span>
                            </button>

                            <!-- Menu déroulant -->
                            <div id="moreMenu"
                                class="hidden absolute left-0 bottom-full mb-2 bg-black border border-gray-700 rounded-2xl p-2 shadow-lg z-50 min-w-max">
                                <a href="/privacy-settings"
                                    class="flex items-center space-x-3 p-3 rounded-xl hover:bg-gray-900 transition-all duration-200">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                    </svg>
                                    <span class="text-sm">Confidentialité</span>
                                </a>
                                <a href="/blocked-users"
                                    class="flex items-center space-x-3 p-3 rounded-xl hover:bg-gray-900 transition-all duration-200">
                                    <i class="fas fa-ban text-red-400"></i>
                                    <span class="text-sm">Utilisateurs bloqués</span>
                                </a>
                                <div class="border-t border-gray-700 my-1"></div>
                                <a href="#"
                                    class="flex items-center space-x-3 p-3 rounded-xl hover:bg-gray-900 transition-all duration-200">
                                    <i class="fas fa-cog"></i>
                                    <span class="text-sm">Paramètres</span>
                                </a>
                                <a href="#"
                                    class="flex items-center space-x-3 p-3 rounded-xl hover:bg-gray-900 transition-all duration-200">
                                    <i class="fas fa-question-circle"></i>
                                    <span class="text-sm">Aide</span>
                                </a>
                            </div>
                        </div>

                        <!-- Changement de thème -->
                        <div class="relative">
                            <button onclick="toggleThemeSelector()"
                                class="flex items-center space-x-3 p-2 rounded-full hover:bg-gray-900 transition-all duration-200 w-full">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z" />
                                </svg>
                                <span class="text-lg">Thème</span>
                            </button>

                            <!-- Sélecteur de thème -->
                            <div id="themeSelector"
                                class="hidden absolute left-0 bottom-full mb-2 bg-gray-800 rounded-2xl p-4 shadow-lg z-50 min-w-max">
                                <h3 class="text-white font-bold mb-3 text-sm">Choisir un thème</h3>
                                <div class="grid grid-cols-3 gap-2">
                                    <button onclick="changeTheme('noir')"
                                        class="theme-btn flex flex-col items-center p-2 rounded-lg hover:bg-gray-700 transition-all">
                                        <div class="w-6 h-6 bg-black border border-gray-600 rounded-full mb-1"></div>
                                        <span class="text-xs text-white">Noir</span>
                                    </button>
                                    <button onclick="changeTheme('blanc')"
                                        class="theme-btn flex flex-col items-center p-2 rounded-lg hover:bg-gray-700 transition-all">
                                        <div class="w-6 h-6 bg-white border border-gray-600 rounded-full mb-1"></div>
                                        <span class="text-xs text-white">Blanc</span>
                                    </button>
                                    <button onclick="changeTheme('vert')"
                                        class="theme-btn flex flex-col items-center p-2 rounded-lg hover:bg-gray-700 transition-all">
                                        <div class="w-6 h-6 bg-green-600 rounded-full mb-1"></div>
                                        <span class="text-xs text-white">Vert</span>
                                    </button>
                                    <button onclick="changeTheme('rouge')"
                                        class="theme-btn flex flex-col items-center p-2 rounded-lg hover:bg-gray-700 transition-all">
                                        <div class="w-6 h-6 bg-red-600 rounded-full mb-1"></div>
                                        <span class="text-xs text-white">Rouge</span>
                                    </button>
                                    <button onclick="changeTheme('rose')"
                                        class="theme-btn flex flex-col items-center p-2 rounded-lg hover:bg-gray-700 transition-all">
                                        <div class="w-6 h-6 bg-pink-600 rounded-full mb-1"></div>
                                        <span class="text-xs text-white">Rose</span>
                                    </button>
                                    <button onclick="changeTheme('bleu')"
                                        class="theme-btn flex flex-col items-center p-2 rounded-lg hover:bg-gray-700 transition-all">
                                        <div class="w-6 h-6 bg-blue-600 rounded-full mb-1"></div>
                                        <span class="text-xs text-white">Bleu</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bouton Poster -->
                    <button onclick="focusTweetComposer()"
                        class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 rounded-full mt-4 transition-all duration-200 text-sm">
                        Poster
                    </button>
                </nav>

                <!-- Profil utilisateur -->
                <div class="flex-shrink-0 px-4 pb-2 pt-2">
                    <div
                        class="flex items-center space-x-3 p-2 rounded-full hover:bg-gray-900 cursor-pointer transition-all duration-200 mb-2">
                        <div
                            class="w-8 h-8 {{ currentUser.avatar ? '' : 'bg-gradient-to-r from-pink-500 to-purple-600' }} rounded-full flex items-center justify-center">
                            @if(currentUser.avatar)
                            <img src="{{ currentUser.avatar }}" alt="Avatar de {{ currentUser.username }}"
                                class="w-full h-full rounded-full object-cover" />
                            @else
                            <span class="text-white font-bold text-xs">{{ currentUser.fullName ?
                                currentUser.fullName.charAt(0).toUpperCase() :
                                currentUser.username.charAt(0).toUpperCase() }}</span>
                            @endif
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="font-bold text-white text-sm truncate">
                                {{ currentUser.username }}
                            </div>
                            <div class="text-gray-400 text-xs truncate">
                                {{ currentUser.fullName || currentUser.username }}
                            </div>
                        </div>
                        <svg class="w-4 h-4 text-gray-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
                        </svg>
                    </div>

                    <!-- Bouton déconnexion -->
                    <div class="pb-2">
                        <form action="/logout" method="POST" class="w-full">
                            {{ csrfField() }}
                            <button type="submit"
                                class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-3 rounded-full transition-all duration-200 flex items-center justify-center space-x-2 text-sm">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                </svg>
                                <span>Déconnexion</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="flex-1 ml-64">
            <div class="max-w-4xl mx-auto">
                <!-- En-tête -->
                <div class="sticky top-0 bg-black bg-opacity-80 backdrop-blur-md border-b border-gray-800 p-4">
                    <div class="flex items-center justify-between mb-4">
                        <h1 class="text-xl font-bold">Messages</h1>
                        <button onclick="toggleNewMessageModal()"
                            class="bg-twitter-blue text-white p-2 rounded-full hover:bg-blue-600 transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4v16m8-8H4" />
                            </svg>
                        </button>
                    </div>

                    <!-- Barre de recherche -->
                    <div class="relative">
                        <input type="text" id="userSearch" placeholder="Rechercher des utilisateurs..."
                            class="w-full bg-gray-900 border border-gray-700 rounded-full px-4 py-2 pl-10 text-white placeholder-gray-400 focus:border-twitter-blue focus:outline-none"
                            autocomplete="off" />
                        <svg class="absolute left-3 top-2.5 w-4 h-4 text-gray-400" fill="none" stroke="currentColor"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>

                        <!-- Résultats de recherche -->
                        <div id="searchResults"
                            class="hidden absolute top-full left-0 right-0 mt-1 bg-black border border-gray-700 rounded-lg shadow-lg z-50 max-h-60 overflow-y-auto">
                        </div>
                    </div>
                </div>

                <!-- Liste des conversations -->
                <div class="divide-y divide-gray-800">
                    @if(conversations && conversations.length > 0)
                    @each(conversation in conversations)
                    <a href="/messages/{{ conversation.user.id }}"
                        class="block p-4 hover:bg-gray-900 transition-colors {{ conversation.unreadCount > 0 ? 'bg-gray-800 border-l-4 border-l-twitter-blue' : '' }}"
                        . <div class="flex items-start space-x-3">
                        <!-- Avatar -->
                        <div class="w-12 h-12 bg-gray-600 rounded-full flex items-center justify-center">
                            <span class="text-xl font-bold">{{ conversation.user.username.charAt(0).toUpperCase()
                                }}</span>
                        </div>

                        <!-- Contenu de la conversation -->
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-2">
                                    <h3
                                        class="font-bold truncate {{ conversation.unreadCount > 0 ? 'text-white' : 'text-gray-300' }}">
                                        {{ conversation.user.username }}
                                    </h3>
                                    @if(conversation.unreadCount > 0)
                                    <span
                                        class="bg-twitter-blue text-white text-xs px-2 py-1 rounded-full font-bold min-w-[20px] text-center">
                                        {{ conversation.unreadCount }}
                                    </span>
                                    @endif
                                </div>
                                <span class="text-sm text-gray-500">
                                    {{ conversation.lastMessage.createdAt.toRelative() }}
                                </span>
                            </div>

                            <div class="flex items-center justify-between mt-1">
                                <p
                                    class="text-gray-400 truncate {{ conversation.unreadCount > 0 ? 'font-semibold text-gray-200' : '' }}">
                                    @if(conversation.lastMessage.senderId === currentUser.id)
                                    <span class="text-gray-500">Vous:</span> {{ conversation.lastMessage.content }}
                                    @else
                                    {{ conversation.lastMessage.content }}
                                    @endif
                                </p>
                                @if(conversation.unreadCount > 0)
                                <div class="flex items-center space-x-1 text-twitter-blue">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                        <circle cx="10" cy="10" r="3" />
                                    </svg>
                                    <span class="text-xs font-bold">Non lu</span>
                                </div>
                                @endif
                            </div>
                        </div>
                </div>
                </a>
                @endeach
                @else
                <div class="p-8 text-center text-gray-500">
                    <svg class="w-16 h-16 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <h3 class="text-xl font-bold mb-2">Aucune conversation</h3>
                    <p>Vous n'avez pas encore de messages. Commencez une nouvelle conversation !</p>
                </div>
                @endif
            </div>
        </div>
    </div>
    </div>

    <!-- Modal Nouveau Message -->
    <div id="newMessageModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-black border border-gray-800 rounded-2xl p-6 w-full max-w-md mx-4">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-bold">Nouveau message</h2>
                <button onclick="toggleNewMessageModal()" class="text-gray-400 hover:text-white">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="space-y-4">
                <!-- Recherche d'utilisateurs -->
                <div class="relative">
                    <input type="text" id="modalUserSearch" placeholder="Rechercher un utilisateur..."
                        class="w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-twitter-blue focus:outline-none"
                        autocomplete="off" />

                    <!-- Résultats dans le modal -->
                    <div id="modalSearchResults" class="mt-2 space-y-1 max-h-48 overflow-y-auto">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let searchTimeout;

        // Fonction pour basculer le modal
        function toggleNewMessageModal() {
            const modal = document.getElementById('newMessageModal');
            const modalSearch = document.getElementById('modalUserSearch');
            const modalResults = document.getElementById('modalSearchResults');

            modal.classList.toggle('hidden');

            if (!modal.classList.contains('hidden')) {
                modalSearch.focus();
            } else {
                modalSearch.value = '';
                modalResults.innerHTML = '';
            }
        }

        // Recherche d'utilisateurs
        function searchUsers(query, resultsContainer, isModal = false) {
            if (query.length < 2) {
                resultsContainer.innerHTML = '';
                if (!isModal) resultsContainer.classList.add('hidden');
                return;
            }

            fetch(`/api/users/search?q=${encodeURIComponent(query)}`, {
                headers: {
                    'Accept': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
                .then(response => response.json())
                .then(users => {
                    resultsContainer.innerHTML = '';

                    if (users.length === 0) {
                        resultsContainer.innerHTML = `
                        <div class="p-3 text-gray-500 text-center">
                            Aucun utilisateur trouvé
                        </div>
                    `;
                    } else {
                        users.forEach(user => {
                            const userDiv = document.createElement('div');
                            userDiv.className = 'flex items-center space-x-3 p-3 hover:bg-gray-800 cursor-pointer rounded-lg';
                            userDiv.onclick = () => startConversation(user.id);

                            userDiv.innerHTML = `
                            <div class="w-10 h-10 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full flex items-center justify-center">
                                <span class="text-white font-bold text-sm">${user.username.charAt(0).toUpperCase()}</span>
                            </div>
                            <div class="flex-1">
                                <div class="font-semibold text-white">${user.username}</div>
                                ${user.fullName ? `<div class="text-sm text-gray-400">${user.fullName}</div>` : ''}
                            </div>
                        `;

                            resultsContainer.appendChild(userDiv);
                        });
                    }

                    if (!isModal) resultsContainer.classList.remove('hidden');
                })
                .catch(error => {
                    console.error('Erreur lors de la recherche:', error);
                    resultsContainer.innerHTML = `
                    <div class="p-3 text-red-500 text-center">
                        Erreur lors de la recherche
                    </div>
                `;
                });
        }

        // Démarrer une conversation
        function startConversation(userId) {
            window.location.href = `/messages/${userId}`;
        }

        // Gestion des événements
        document.addEventListener('DOMContentLoaded', function () {
            const userSearch = document.getElementById('userSearch');
            const searchResults = document.getElementById('searchResults');
            const modalUserSearch = document.getElementById('modalUserSearch');
            const modalSearchResults = document.getElementById('modalSearchResults');

            // Recherche dans la barre principale
            userSearch.addEventListener('input', function () {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    searchUsers(this.value, searchResults, false);
                }, 300);
            });

            // Recherche dans le modal
            modalUserSearch.addEventListener('input', function () {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    searchUsers(this.value, modalSearchResults, true);
                }, 300);
            });

            // Fermer les résultats au clic à l'extérieur
            document.addEventListener('click', function (e) {
                if (!userSearch.contains(e.target) && !searchResults.contains(e.target)) {
                    searchResults.classList.add('hidden');
                }
            });

            // Fermer le modal au clic à l'extérieur
            document.getElementById('newMessageModal').addEventListener('click', function (e) {
                if (e.target === this) {
                    toggleNewMessageModal();
                }
            });
        });
    </script>
</body>

</html>