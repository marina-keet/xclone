                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z">
                                                        </path>
                                                    </svg>
                                                </div>
                                                @if(tweet.repliesCount > 0)
                                                <span class="text-sm">{{ tweet.repliesCount }}</span>
                                                @endif
                                            </button>

                                            <!-- Retweet -->
                                            <button
                                                class="flex items-center space-x-2 hover:text-green-500 transition-colors group">
                                                <div
                                                    class="p-2 rounded-full group-hover:bg-green-500 group-hover:bg-opacity-10 transition-all">
