</head>

<body class="h-full bg-black text-white font-sans overflow-hidden">
    <!-- Messages Flash -->
    @if(flashMessages.has('success'))
    <div class="bg-green-600 text-white px-4 py-3 text-center font-medium">
        {{ flashMessages.get('success') }}
    </div>
    @endif

    @if(flashMessages.has('error'))
    <div class="bg-red-600 text-white px-4 py-3 text-center font-medium">
        {{ flashMessages.get('error') }}
    </div>
    @endif

    <div class="min-h-screen flex">
        <!-- Left Section - Logo -->
        <div class="flex-1 flex items-center justify-center bg-black">
            <div class="w-80 h-80">
                <!-- Logo X -->
                <svg viewBox="0 0 24 24" class="w-full h-full fill-white">
                    <g>
                        <path
                            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z">
                        </path>
                    </g>
                </svg>
            </div>
        </div>

        <!-- Right Section - Content -->
        <div class="flex-1 flex flex-col justify-center px-8 lg:px-16">
            <div class="max-w-md">
                <!-- Title -->
                <h1 class="text-6xl lg:text-7xl font-bold mb-12 leading-tight">
                    Ça se passe maintenant
                </h1>

                <!-- Subtitle -->
                <h2 class="text-3xl font-bold mb-8">
                    Inscrivez-vous.
                </h2>

                <!-- Buttons -->
                <div class="space-y-3">
                    <!-- Google Sign In Button -->
                    <button
                        class="w-full bg-white text-black font-medium py-3 px-6 rounded-full flex items-center justify-center space-x-2 hover:bg-gray-200 transition-colors">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="#4285f4"
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                            <path fill="#34a853"
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                            <path fill="#fbbc05"
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                            <path fill="#ea4335"
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                        </svg>
                        <span>Se connecter en tant que Marina</span>
                    </button>

                    <!-- Apple Sign In Button -->
                    <button
                        class="w-full bg-white text-black font-medium py-3 px-6 rounded-full flex items-center justify-center space-x-2 hover:bg-gray-200 transition-colors">
                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                            <path
                                d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z" />
                        </svg>
                        <span>S'inscrire avec Apple</span>
                    </button>

                    <!-- Divider -->
                    <div class="relative py-4">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-600"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="bg-black px-4 text-gray-400">OU</span>
                        </div>
                    </div>

                    <!-- Create Account Button -->
                    <button id="createAccountBtn"
                        class="w-full bg-x-blue text-white font-medium py-3 px-6 rounded-full hover:bg-blue-600 transition-colors">
                        Créer un compte
                    </button>

                    <!-- Terms -->
                    <p class="text-xs text-gray-400 leading-relaxed">
                        En vous inscrivant, vous acceptez les
                        <a href="#" class="text-x-blue hover:underline">Conditions d'utilisation</a> et la
                        <a href="#" class="text-x-blue hover:underline">Politique de confidentialité</a>, notamment
                        <a href="#" class="text-x-blue hover:underline">l'Utilisation des cookies</a>.
                    </p>

                    <!-- Sign In -->
                    <div class="pt-8">
                        <p class="text-xl font-bold mb-4">Vous avez déjà un compte ?</p>
                        <button id="signInBtn"
                            class="w-full border border-gray-600 text-x-blue font-medium py-3 px-6 rounded-full hover:bg-gray-900 transition-colors">
                            Se connecter
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Signup -->
    <div id="signupModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-black border border-gray-700 rounded-2xl w-full max-w-lg mx-4 relative">
            <!-- Close Button -->
            <button id="closeSignupModal" class="absolute top-4 left-4 text-gray-400 hover:text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <!-- Modal Content -->
            <div class="p-8 pt-16">
                <!-- Logo -->
                <div class="flex justify-center mb-8">
                    <svg viewBox="0 0 24 24" class="w-8 h-8 fill-white">
                        <g>
                            <path
                                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z">
                            </path>
                        </g>
                    </svg>
                </div>

                <h2 class="text-2xl font-bold mb-6 text-center">Créer votre compte</h2>

                <form action="/register" method="POST" class="space-y-4">
                    {{ csrfField() }}
                    <div>
                        <input type="text" name="fullName" placeholder="Nom complet" required
                            class="w-full bg-transparent border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-x-blue focus:outline-none">
                    </div>
                    <div>
                        <input type="text" name="username" placeholder="Nom d'utilisateur" required
                            class="w-full bg-transparent border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-x-blue focus:outline-none">
                    </div>
                    <div>
                        <input type="email" name="email" placeholder="Email" required
                            class="w-full bg-transparent border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-x-blue focus:outline-none">
                    </div>
                    <div>
                        <input type="password" name="password" placeholder="Mot de passe" required minlength="6"
                            class="w-full bg-transparent border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-x-blue focus:outline-none">
                    </div>
                    <div>
                        <input type="date" name="birthDate" placeholder="Date de naissance"
                            class="w-full bg-transparent border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-x-blue focus:outline-none">
                    </div>

                    <button type="submit"
                        class="w-full bg-white text-black font-bold py-3 px-6 rounded-full hover:bg-gray-200 transition-colors mt-6">
                        S'inscrire
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Login -->
    <div id="loginModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-black border border-gray-700 rounded-2xl w-full max-w-lg mx-4 relative">
            <!-- Close Button -->
            <button id="closeLoginModal" class="absolute top-4 left-4 text-gray-400 hover:text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                    </path>
                </svg>
            </button>

            <!-- Modal Content -->
            <div class="p-8 pt-16">
                <!-- Logo -->
                <div class="flex justify-center mb-8">
                    <svg viewBox="0 0 24 24" class="w-8 h-8 fill-white">
                        <g>
                            <path
                                d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z">
                            </path>
                        </g>
                    </svg>
                </div>

                <h2 class="text-2xl font-bold mb-6 text-center">Connectez-vous à X</h2>

                <form action="/login" method="POST" class="space-y-4">
                    {{ csrfField() }}
                    <div>
                        <input type="text" name="identifier" placeholder="Email ou nom d'utilisateur" required
                            class="w-full bg-transparent border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-x-blue focus:outline-none">
                    </div>
                    <div>
                        <input type="password" name="password" placeholder="Mot de passe" required
                            class="w-full bg-transparent border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-x-blue focus:outline-none">
                    </div>

                    <button type="submit"
                        class="w-full bg-white text-black font-bold py-3 px-6 rounded-full hover:bg-gray-200 transition-colors mt-6">
                        Se connecter
                    </button>

                    <div class="text-center mt-4">
                        <a href="#" class="text-x-blue hover:underline text-sm">Mot de passe oublié ?</a>
                    </div>
                </form>

                <div class="text-center mt-6 text-gray-400">
                    <span>Vous n'avez pas de compte ? </span>
                    <button id="switchToSignup" class="text-x-blue hover:underline">Inscrivez-vous</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Modal functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Elements
            const createAccountBtn = document.getElementById('createAccountBtn');
            const signInBtn = document.getElementById('signInBtn');
            const signupModal = document.getElementById('signupModal');
            const loginModal = document.getElementById('loginModal');
            const closeSignupModal = document.getElementById('closeSignupModal');
            const closeLoginModal = document.getElementById('closeLoginModal');
            const switchToSignup = document.getElementById('switchToSignup');

            // Open signup modal
            createAccountBtn.addEventListener('click', function () {
                signupModal.classList.remove('hidden');
            });

            // Open login modal
            signInBtn.addEventListener('click', function () {
                loginModal.classList.remove('hidden');
            });

            // Close signup modal
            closeSignupModal.addEventListener('click', function () {
                signupModal.classList.add('hidden');
            });

            // Close login modal
            closeLoginModal.addEventListener('click', function () {
                loginModal.classList.add('hidden');
            });

            // Switch from login to signup
            switchToSignup.addEventListener('click', function () {
                loginModal.classList.add('hidden');
                signupModal.classList.remove('hidden');
            });

            // Close modals when clicking outside
            signupModal.addEventListener('click', function (e) {
                if (e.target === signupModal) {
                    signupModal.classList.add('hidden');
                }
            });

            loginModal.addEventListener('click', function (e) {
                if (e.target === loginModal) {
                    loginModal.classList.add('hidden');
                }
            });
        });
    </script>
</body>

</html>