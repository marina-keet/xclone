        }

        .fallback-h-screen {
            height: 100vh;
        }

        .fallback-items-center {
            align-items: center;
        }

        .fallback-justify-center {
            justify-content: center;
        }

        .fallback-text-6xl {
            font-size: 4rem;
        }

        .fallback-font-bold {
            font-weight: 700;
        }

