              >
                <i class="fas fa-eye" id="password-eye"></i>
              </button>
            </div>
          </div>

          <!-- Confirmation du mot de passe -->
          <div>
            <label for="password_confirmation" class="block text-sm font-medium text-gray-300 mb-2">
              <i class="fas fa-check-double mr-2"></i>
              Confirmer le mot de passe
                    </label>
            <div class="relative">
              <input
                type="password"
                id="password_confirmation"
                name="password_confirmation"
                required
                minlength="6"
                class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent pr-12"
                placeholder="Répétez le mot de passe"
              />
              <button
                type="button"
                onclick="togglePassword('password_confirmation')"
                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white"
              >
                <i class="fas fa-eye" id="password_confirmation-eye"></i>
              </button>
            </div>
          </div>

          <!-- Indicateur de force du mot de passe -->
          <div id="password-strength" class="hidden">
            <div class="flex items-center space-x-2 mb-2">
              <span class="text-sm text-gray-400">Force du mot de passe:</span>
              <div class="flex-1 h-2 bg-gray-700 rounded">
                <div id="strength-bar" class="h-2 rounded transition-all duration-300">
                </div>
              </div>
              <span id="strength-text" class="text-sm"></span>
            </div>
          </div>

          <button
            type="submit"
            class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-full transition-colors"
          >
            <i class="fas fa-save mr-2"></i>
            Réinitialiser le mot de passe
                </button>
        </form>

        <!-- Navigation -->
        <div class="mt-6 text-center">
          <a href="/login" class="text-blue-400 hover:text-blue-300 underline">
            <i class="fas fa-arrow-left mr-2"></i>
            Retour à la connexion
                </a>
        </div>

        <!-- Conseils de sécurité -->
        <div class="mt-8 p-4 bg-gray-800 rounded-lg">
          <h3 class="text-lg font-semibold mb-2 text-white">
            <i class="fas fa-lightbulb text-yellow-400 mr-2"></i>
            Conseils pour un mot de passe sécurisé
          </h3>
          <ul class="text-sm text-gray-400 space-y-1">
            <li>
              • Au moins 8 caractères (6 minimum requis)
            </li>
            <li>
              • Mélangez majuscules et minuscules
            </li>
            <li>
              • Incluez des chiffres et des symboles
            </li>
            <li>
              • Évitez les informations personnelles
            </li>
            <li>
              • N'utilisez pas ce mot de passe ailleurs
            </li>
          </ul>
        </div>
      </div>
    </div>

    <script>
      // Fonction pour afficher/masquer le mot de passe
      function togglePassword(fieldId) {
        const field = document.getElementById(fieldId);
        const eye = document.getElementById(fieldId + "-eye");
        if (field.type === "password") {
          field.type = "text";
          eye.classList.remove("fa-eye");
          eye.classList.add("fa-eye-slash");
        } else {
          field.type = "password";
          eye.classList.remove("fa-eye-slash");
          eye.classList.add("fa-eye");
        }
      }
      // Vérification de la correspondance des mots de passe

      function checkPasswordMatch() {
        const password = document.getElementById("password");
        const confirmation = document.getElementById("password_confirmation");
        if (confirmation.value && password.value !== confirmation.value) {
          confirmation.setCustomValidity("Les mots de passe ne correspondent pas");
          confirmation.classList.add("border-red-500");
          confirmation.classList.remove("border-gray-600");
        } else {
          confirmation.setCustomValidity("");
          confirmation.classList.remove("border-red-500");
          confirmation.classList.add("border-gray-600");
        }
      }
      // Vérification de la force du mot de passe

      function checkPasswordStrength() {
        const password = document.getElementById("password").value;
        const strengthIndicator = document.getElementById("password-strength");
        const strengthBar = document.getElementById("strength-bar");
        const strengthText = document.getElementById("strength-text");
        if (password.length === 0) {
          strengthIndicator.classList.add("hidden");
          return;
        }
        strengthIndicator.classList.remove("hidden");
        let strength = 0;
        let label = "";
        let color = "";
        // Critères de force
        if (password.length >= 6) strength++;
        if (password.length >= 8) strength++;
        if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
        if (/\d/.test(password)) strength++;
        if (/[^A-Za-z0-9]/.test(password)) strength++;
        // Déterminer le niveau et la couleur
        switch (strength) {
         case 0:
         case 1:
          label = "Très faible";
          color = "bg-red-500";
          break;

         case 2:
          label = "Faible";
          color = "bg-orange-500";
          break;

         case 3:
          label = "Moyen";
          color = "bg-yellow-500";
          break;

         case 4:
          label = "Bon";
          color = "bg-blue-500";
          break;

         case 5:
          label = "Excellent";
          color = "bg-green-500";
          break;
        }
        strengthBar.className = `h-2 rounded transition-all duration-300 ${color}`;
        strengthBar.style.width = `${strength / 5 * 100}%`;
        strengthText.textContent = label;
      }
      // Event listeners

      document.addEventListener("DOMContentLoaded", function() {
        const password = document.getElementById("password");
        const confirmation = document.getElementById("password_confirmation");
        password.addEventListener("input", checkPasswordStrength);
        confirmation.addEventListener("input", checkPasswordMatch);
        // Vérification finale avant soumission
        const form = document.querySelector("form");
        form.addEventListener("submit", function(e) {
          checkPasswordMatch();
          if (password.value !== confirmation.value) {
            e.preventDefault();
            alert("Les mots de passe ne correspondent pas.");
          }
        });
      });
    </script>
  </body>

</html>
